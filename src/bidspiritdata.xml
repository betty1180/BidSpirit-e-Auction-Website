<?xml version="1.0" encoding="UTF-8"?>
<BidSpirit>
    <home>
        <navbar>
            <brand>
                <logo src="src/assets/Images/Logo.png" alt="Logo" />
            </brand>
            <navLinks>
                <link to="/">Home</link>
                <link to="/auctions">Auctions</link>
                <link to="/gallery">Gallery</link>
                <link to="/about">About Us</link>
                <link to="/contact">Contact Us</link>
                <link to="/feedback">Feedback</link>
            </navLinks>
            <button variant="primary" onClick="handleSignShow()">Sign In</button>
            <visitorCount>Visitor Count: {visitorCount}</visitorCount>
        </navbar>
        
        <heroSection style="display: 'none'">
            <userName>{name}</userName>
            <heroTexts>
                <h1>Welcome to BidSpirit</h1>
                <p>Your online marketplace for fine art, antiques, collectibles, and lots more.</p>
                <form onSubmit="handleWelcome()">
                    <input type="text" placeholder="Enter your first name" value="{name}" onChange="handleNameChange()" />
                    <button type="submit" class="cta-button" style="width: '400px'; marginLeft: '35%'">Submit</button>
                </form>
                <welcomeText>{showWelcome ? `Hello, ${name}! Welcome to our auction site!` : ''}</welcomeText>
            </heroTexts>
        </heroSection>

        <container class="home-container">
            <auctionSection>
                <h1>Upcoming Auctions</h1>
                <row>
                    <auctionItems>
                        <!-- {auctionItems.map((item) => (
                            <auctionCard onClick={() => handleShow(item)}>
                                <img src="{item.imageUrl}" alt="{item.title}" />
                                <title>{item.title}</title>
                                <basePrice>{item.basePrice}</basePrice>
                            </auctionCard>
                        ))} -->
                    </auctionItems>
                </row>
            </auctionSection>

            <modal show="{showModal}" onHide="handleClose()">
                <modalHeader closeButton>
                    <modalTitle>{selectedItem ? selectedItem.title : ''}</modalTitle>
                </modalHeader>
                <modalBody>
                    <img src="{selectedItem ? selectedItem.imageUrl : ''}" alt="{selectedItem ? selectedItem.title : ''}" class="img-fluid" />
                    <p>{selectedItem ? selectedItem.description : ''}</p>
                    <p>Base Price: {selectedItem ? selectedItem.basePrice : ''}</p>
                </modalBody>
                <modalFooter>
                    <button>Bid</button>
                    <button style="background: 'red'" onClick="handleClose()">Close</button>
                </modalFooter>
            </modal>

            <signModal show="{showSignModal}" onHide="handleSignClose()" centered>
                <modalHeader closeButton>
                    <modalTitle>{isSignUp ? 'Sign Up' : 'Sign In'}</modalTitle>
                </modalHeader>
                <modalBody>
                    <socialButtons>
                        <button variant="primary">Continue with Google</button>
                        <button variant="dark">Continue with Apple</button>
                    </socialButtons>

                    <orText>OR</orText>

                    <form>
                        <input type="email" placeholder="Enter email" />
                        <input type="password" placeholder="Password" />
                        <button variant="primary" type="submit">{isSignUp ? 'Sign Up' : 'Sign In'}</button>
                    </form>

                    <toggleLink>
                        {isSignUp ? (
                            <p>Already have an account? <span onClick="toggleSignUp()">Sign In</span></p>
                        ) : (
                            <p>Don't have an account? <span onClick="toggleSignUp()">Sign Up</span></p>
                        )}
                    </toggleLink>
                </modalBody>
            </signModal>

        </container>
        
        <ticker />
    </home>
    </Home>
